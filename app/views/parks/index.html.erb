<p id="notice"><%= notice %></p>

<h1>Parks</h1>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>Number</th>
      <th>Time start</th>
      <th>Time end</th>
      <th>Total amount</th>
      <th>Comments</th>
      <th>Business</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parks.each do |park| %>
      <tr>
        <td><%= park.number %></td>
        <td>
					<%= park.time_start.strftime("%B %d %Y") %>
				</td>
        <td><%= park.time_end %></td>
        <td><%= park.total_amount %></td>
        <td><%= park.comments %></td>
        <td><%= park.business.name %></td>
        <td><%= link_to 'Show', park %></td>
        <td><%= link_to 'Edit', edit_park_path(park) %></td>
        <td><%= link_to 'Destroy', park, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

